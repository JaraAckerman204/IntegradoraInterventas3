{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(png|jpg|jpeg|svg|webp|gif|ico|woff|woff2|ttf|eot)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-firestore",
      "urls": [
        "https://firestore.googleapis.com/**",
        "https://firebase.googleapis.com/**"
      ],
      "cacheConfig": {
        "maxSize": 200,
        "maxAge": "7d",
        "strategy": "freshness",
        "timeout": "10s"
      }
    },
    {
      "name": "product-images",
      "urls": [
        "https://firebasestorage.googleapis.com/**",
        "https://*.googleusercontent.com/**"
      ],
      "cacheConfig": {
        "maxSize": 500,
        "maxAge": "30d",
        "strategy": "performance"
      }
    },
    {
      "name": "external-images",
      "urls": [
        "https://**/*.jpg",
        "https://**/*.jpeg",
        "https://**/*.png",
        "https://**/*.webp",
        "https://**/*.gif"
      ],
      "cacheConfig": {
        "maxSize": 300,
        "maxAge": "30d",
        "strategy": "performance"
      }
    }
  ]
}